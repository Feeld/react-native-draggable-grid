{
  "name": "@th3rdwave/react-native-draggable-grid",
  "keywords": [
    "drag",
    "sortable",
    "grid"
  ],
  "version": "1.0.1",
  "description": "A draggable grid for react native",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SHISME/react-native-draggable-grid"
  },
  "scripts": {
    "built": "rm -rf built && tsc",
    "watch": "tsc -w --outDir demo/built",
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
    ]
  },
  "pre-commit": [
    "test"
  ],
  "author": "shisme",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.5",
    "@types/react": "^16.9.32",
    "@types/react-native": "*",
    "babel-jest": "^25.2.6",
    "jest": "^25.2.6",
    "jest-react-native": "^18.0.0",
    "pre-commit": "^1.2.2",
    "react": "^16.13.1",
    "react-native": "^0.62.0",
    "react-native-gesture-handler": "^1.6.1",
    "ts-jest": "^25.3.0",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*"
  }
}
